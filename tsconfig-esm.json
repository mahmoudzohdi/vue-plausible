{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./lib/types",
    "declarationMap": true,
    "outDir": "./lib/esm"
  },
  "include": [
    "./src"
  ]
}
